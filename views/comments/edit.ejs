<%- include("../partials/header") %>
	<h1 class="text-center mt-2">Edit A Comment</h1>
	<div class="row  justify-content-center">
		
		<div class="col-xl-4 col-lg-5 col-md-6 col-sm-8 col-10 mt-2">
			<form class="col-12" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				
	
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit!
					</button>
				</div>				
			</form>
			<div class="col-12">
				<a href="/campgrounds"> Go back</a>	
			</div>
		</div>
		
	</div>





<%- include("../partials/footer") %>
	
