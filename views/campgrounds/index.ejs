<%- include("../partials/header") %>



<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>
				This the Campgrounds Page!
			</h1>
			<p>
				View out hand-picked campgrounds from all over the world!
			</p>
			<p>
				<a class="btn btn-primary btn-large" href="/campgrounds/new"> Add new campground!</a>
			</p>
			
			<p>
				<form action="/campgrounds" method="GET" class="form-inline">
					<div class="form-group">
						<input type="text" name="search" placeholder="Campground search">
						<input type="submit" value="Search" class="btn btn-default">
					</div>
				</form>
			</p>
		</div>
	</header>


	<div class="row" style="display:flex; flex-wrap:wrap;">
		<div class="col-md-12 text-center">
			<% if(noMatch != undefined) { %>
				<h3>
					<%= noMatch %>
				</h3>
			<% } %>
		</div>
		<% campgrounds.forEach(function(campground){%>
			<div class="col-md-3 col-sm-6">
				<div class="card img-thumbnail" >
				  <img src="<%= campground.image %>" class="card-img-top" alt="..." >
				  <div class="card-body">
					<h4>
							<%= campground.name %>
					</h4>
			
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
				  </div>
			</div>
				
			</div>
		<% }) %>
	</div>


</div>
<%- include("../partials/footer") %>